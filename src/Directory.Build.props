<Project>
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>13</LangVersion>
        <NoWarn>NU1507,NU1902</NoWarn>
        <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
        <EnableConfigurationBindingGenerator>true</EnableConfigurationBindingGenerator>
        <DefaultItemExcludesInProjectFolder>$(DefaultItemExcludesInProjectFolder);packages.lock.json</DefaultItemExcludesInProjectFolder>
        <InterceptorsNamespaces>$(InterceptorsNamespaces);Microsoft.Extensions.Configuration.Binder.SourceGeneration</InterceptorsNamespaces>
        
        <!-- Common NuGet Properties -->
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageIcon>icon.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://git.davidhome.net/web/davidhome-rssfeed</RepositoryUrl>
        <PackageProjectUrl>https://www.davidhome.net/</PackageProjectUrl>
        <Copyright>Copyright (c) davidhome.net 2025</Copyright>
        <Authors>ddprince</Authors>
    </PropertyGroup>
    <ItemGroup>
        <None Include="..\..\LICENSE" Pack="true" PackagePath=""/>
        <None Include="..\..\assets\icon.png" Pack="true" PackagePath="\"/>
        <None Include="..\..\assets\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>